{{> overall_header }}

<script type="text/javascript">
// <![CDATA[
	onload_functions.push('document.getElementById("{{#if S_ADMIN_AUTH }}{{PASSWORD_CREDENTIAL}}{{else}}{{USERNAME_CREDENTIAL}}{{/if}}").focus();');
// ]]>
</script>

<form action="{{S_LOGIN_ACTION}}.html" method="post" id="login">
<div class="panel">
	<div class="inner"><span class="corners-top"><span></span></span>

	<div class="content">
		<h2>{{#if LOGIN_EXPLAIN }}{{LOGIN_EXPLAIN}}{{else}}{{L_LOGIN}}{{/if}}</h2>

		<fieldset {{#if (not S_CONFIRM_CODE )}}class="fields1"{{else}}class="fields2"{{/if}}>
		{{#if ERROR}}<div class="error">{{ERROR}}</div>{{/if}}
		<dl>
			<dt><label for="{{USERNAME_CREDENTIAL}}">{{L_USERNAME}}:</label></dt>
			<dd><input type="text" tabindex="1" name="{{USERNAME_CREDENTIAL}}" id="{{USERNAME_CREDENTIAL}}" size="25" value="{{USERNAME}}" class="inputbox autowidth" /></dd>
		</dl>
		<dl>
			<dt><label for="{{PASSWORD_CREDENTIAL}}">{{L_PASSWORD}}:</label></dt>
			<dd><input type="password" tabindex="2" id="{{PASSWORD_CREDENTIAL}}" name="{{PASSWORD_CREDENTIAL}}" size="25" class="inputbox autowidth" /></dd>
			<!-- IF S_DISPLAY_FULL_LOGIN and (U_SEND_PASSWORD or U_RESEND_ACTIVATION) -->
				{{#if U_SEND_PASSWORD }}<dd><a href="{{U_SEND_PASSWORD}}">{{L_FORGOT_PASS}}</a></dd>{{/if}}
				{{#if U_RESEND_ACTIVATION }}<dd><a href="{{U_RESEND_ACTIVATION}}">{{L_RESEND_ACTIVATION}}</a></dd>{{/if}}
			<!-- ENDIF -->
		</dl>
		{{#and CAPTCHA_TEMPLATE S_CONFIRM_CODE}}
			<!-- DEFINE $CAPTCHA_TAB_INDEX = 3 -->
			<!-- INCLUDE {CAPTCHA_TEMPLATE} -->
		{{/and}}
		{{#if S_DISPLAY_FULL_LOGIN }}
		<dl>
			{{#if S_AUTOLOGIN_ENABLED }}<dd><label for="autologin"><input type="checkbox" name="autologin" id="autologin" tabindex="4" /> {{L_LOG_ME_IN}}</label></dd>{{/if}}
			<dd><label for="viewonline"><input type="checkbox" name="viewonline" id="viewonline" tabindex="5" /> {{L_HIDE_ME}}</label></dd>
		</dl>
		{{/if}}

		{{S_LOGIN_REDIRECT}}
		<dl>
			<dt>&nbsp;</dt>
			<dd>{{S_HIDDEN_FIELDS}}<input type="submit" name="login" tabindex="6" value="{{L_LOGIN_LOGOUT}}" class="button1" /></dd>
		</dl>
		</fieldset>
	</div>
	<span class="corners-bottom"><span></span></span></div>
</div>


{{#and (not S_ADMIN_AUTH) S_REGISTER_ENABLED}}
	<div class="panel">
		<div class="inner"><span class="corners-top"><span></span></span>

		<div class="content">
			<h3>{{L_REGISTER}}</h3>
			<p>{{L_LOGIN_INFO}}</p>
			<p><strong><a href="{{U_TERMS_USE}}">{{L_TERMS_USE}}</a> | <a href="{{U_PRIVACY}}">{{L_PRIVACY}}</a></strong></p>
			<hr class="dashed" />
			<p><a href="{{U_REGISTER}}" class="button2">{{L_REGISTER}}</a></p>
		</div>

		<span class="corners-bottom"><span></span></span></div>
	</div>
{{/and}}

</form>

{{> overall_footer}}