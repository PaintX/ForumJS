<!DOCTYPE html>
<html dir="{{S_CONTENT_DIRECTION}}" lang="{S_USER_LANG}">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<!-- IF META -->{META}<!-- ENDIF -->
	<title>{PAGE_TITLE}</title>

	<link href="/css/adm/admin.css" rel="stylesheet" type="text/css" media="screen" />
</head>

<body class="{{S_CONTENT_DIRECTION}} nojs">
<div id="wrap">
	<div id="page-header">
		<h1>{{L_INSTALL_PANEL}}</h1>
		<p id="skip"><a href="#acp">{L_SKIP}</a></p>
		{{#if S_LANG_SELECT}}
		    <form method="post" action="#" id="language_selector">
			    <fieldset class="nobg">
				    <label for="language">{{L_SELECT_LANG}}{{i18n "L_COLON"}}</label>
				    <select  id="language" name="language">
					    {{#each language_select_item}}
					        <option value="{{VALUE}}"{{#if SELECTED}} selected="selected"{{/if}}>{{NAME}}</option>
					    {{/each}}
				    </select>
				    <input class="button1" type="submit" id="change_lang" name="change_lang" value="{{L_CHANGE}}" />
			    </fieldset>
		    </form>
		{{/if}}
	</div>

	<div id="page-body">
		<div id="tabs">
			<ul>
                {{#each t_block1}}
				    <li class="tab{{#if S_SELECTED}} activetab{{/if}}"><a href="{{U_TITLE}}.html">{{L_TITLE}}</a></li>
				{{/each}}
			</ul>
		</div>

		<div id="acp">
			<div id="content">
				<div id="menu">
					<div class="menu-block no-header">
						<ul>
							{{#each l_block1}}
							    <li{{#if S_SELECTED}}  id="activemenu"{{/if}}><a href="{{U_TITLE}}.html"><span>{{L_TITLE}}</span></a></li>
							{{/each}}
                            {{#each l_block2}}
							    <li{{#if S_SELECTED}} id="activemenu"{{/if}}><span{{#if S_COMPLETE}} class="completed"{{/if}} id="installer-stage-{{STAGE_NAME}}">{{L_TITLE}}</span></li>
							{{/each}}
						</ul>
					</div>
				</div>

				<div id="main" class="install-body">
					<div class="main">
